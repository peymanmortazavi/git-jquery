div.events
	each item in items
		div.listitem
			div.row.nomargin
				div.six.columns
					h6.nomargin
						a(href="#", onClick='repoView("' + item.full_name + '")', style="color: white; text-decoration: none")
							= item.name
					p.nomargin
						h6= "by "
							b= item.owner.login
				div.six.columns
					div(style="float: right; text-align: right")
						h6.nomargin= item.open_issues + " issues"
						h6.nomargin= item.forks + " forks"
						h6.nomargin= item.language ? item.language : "No Language"